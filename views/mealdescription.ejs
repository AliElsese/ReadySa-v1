    <div class="Restaurants">
        <header class="mb-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <div class="header-info">
                            <div class="info-title">
                                <h1><%= restaurantname %></h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="header-img">
                            <img src='/img/restaurants/image-from-rawpixel-id-2822722-original.png' alt="header-img" />
                        </div>
                    </div>
                </div>
            </div>
        </header>
    </div>

    <div class="container product-details mt-5 mb-5">
        <div class="row">
            <div class="col-md-6 text-center p-5">
                <img src="/<%= menu[0].mealimage %>" class="img-fluid img-responsive" alt="">
            </div>
            
            
            <div class="col-md-6 text-right p-5">
                <form action="/add-to-cart" method="post">
                <div class="row">
                    <div class="col-md-12">
                        <h3><%= menu[0].mealname %></h3>
                        <p class="mt-4"><%= menu[0].mealdescription %></p>
                        <input type="hidden" name="price" value="<%= menu[0].mealprice %>">
                        <h5 class="mt-4"><%= menu[0].mealprice %><sub>RS</sub></h5>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-12">
                        <label for="quantity"><h4>الكمية :</h4></label><br/>
                        <input class="col-md-2 text-center mt-2" type="text" id="quantity" name="qty" required>
                    </div>
                </div>

                <% if(extras.length != 0) { %>
                <div class="row mt-3">
                    <div class="col-md-12 text-right">
                        <h4>هل تريد اضافات :</h4>
                        <% for(var i = 0; i < extras.length; i++) { %>
                            <div class="form-check form-check-inline mt-2">
                                <input class="form-check-input" type="checkbox" name="extras" value="<%= extras[i].extraname %>">
                                <label class="form-check-label" for="inlineCheckbox1"><%= extras[i].extraname %></label>
                            </div>
                        <% } %>
                    </div>
                </div>
                <% } %>
                
                <div class="row mt-5">
                    <div class="col-md-6 text-center">
                        
                            <input type="hidden" name="restaurantid" value="<%= menu[0].restaurantid %>">
                            <input type="hidden" name="mealid" value="<%= menu[0].mealid %>">
                            <button type="submit" class="form-control">اضف الى طلباتي</button>
                    
                    </div>
                    <div class="col-md-6 text-center">
                        <a href="/restaurants" class="form-control">عودة الى المطاعم</a>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>

