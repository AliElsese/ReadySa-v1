    <div class="all mt-5 text-right">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="box">
                        <% if(cart.length === 0 || !cart) { %>
                        <div class="col-md-12 text-center">
                            <h2>لم تقم بأي طلبات بعد</h2>
                        </div>
                        <% } else { %> 
                        <div class="col-md-12 text-center">
                            <h2>المطاعم التي قمت بالطلب منها</h2>
                        </div>
                        <% } %>
                    </div>
                    <section class="event m-5">

                            <div class="container">
                    
                                <div class="row">
                                    <% for(var i = 0; i < cart.length; i++) { %>
                                    <div class="col-md-4">
                                        <div class="card text-center mb-4">
                                            <img src="<%= cart[i].restaurantimage %>" class="px-2 py-2" style="width : 290px; height : 288px" alt="...">
                                            <div class="card-body">
                                                <a href="/ordersRestaurants/<%= cart[i].restaurantid %>" style="text-decoration: none;">
                                                    <h5 class="card-title"><%= cart[i].restaurantname %></h5>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>
                    
                            </div>
                    
                    </section>
