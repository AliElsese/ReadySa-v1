                <i class="fas fa-bars text-white"></i>
            </button>
            <div class="collapse navbar-collapse show" id="navbarBasic">
                <ul class="navbar-nav me-auto mb-2">
                    <li class="nav-item m-2">
                        <a class="nav-link" href="/" >
                            
                            الرئيسية
                        </a>
                    </li>
                    <li class="nav-item m-2">
                        <a class="nav-link" href="/restaurants" >
                            
                            المطاعم
                        </a>
                    </li>
                    <li class="nav-item m-2">
                        <a class="nav-link" href="/day-menu" >
                            
                            منيو اليوم
                        </a>
                    </li>
                    <li class="nav-item m-2">
                        <a class="nav-link active" href="/offers" >
                            
                            العروض
                        </a>
                    </li>
                    <li class="nav-item m-2">
                        <a class="nav-link" href="/profile" >
                            
                            حسابي
                        </a>
                    </li>
                    <li class="nav-item m-2">
                        <a class="nav-link" href="/ordersRestaurants" >
                            
                            طلباتي
                        </a>
                    </li>
                    <li class="nav-item m-2">
                        <a class="nav-link" href="/contact-us" >
                            
                            اتصل بنا
                        </a>
                    </li>
                    <% if(user != null) { %>
                        <li class="nav-item m-2">
                            <a class="nav-link" href="/logoutUser" >
                                
                                تسجيل خروج
                            </a>
                        </li>
                    <% } else { %>
                        <li class="nav-item m-2">
                            <a class="nav-link" href="/login-user" >
                                    
                                تسجيل دخول
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="heading">
        <div class="overlay">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading-text">
                            <h1>عروض اليوم</h1>
                            <p>مجموعة من أقوي العروض لهذا اليوم</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container product-details mt-5 mb-5">
        <div class="row">
            <div class="col-md-6 text-center p-5">
                <img src="/<%= offer[0].mealimage %>" class="img-fluid img-responsive" alt="">
            </div>
            
            
            <div class="col-md-6 text-right p-5">
                <form action="/add-to-cart" method="post">
                <div class="row">
                    <div class="col-md-12">
                        <h3><%= offer[0].mealname %></h3>
                        <del><p class="mt-4"><%= offer[0].mealprice %><sub>RS</sub></p></del>
                        <input type="hidden" name="price" value="<%= offer[0].mealnewprice %>">
                        <h5 class="mt-4"><%= offer[0].mealnewprice %><sub>RS</sub></h5>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-12">
                        <label for="quantity"><h4>الكمية :</h4></label><br/>
                        <input class="col-md-2 text-center mt-2" type="text" id="quantity" name="qty" required>
                    </div>
                </div>

                <% if(extras.length != 0) { %>
                    <div class="row mt-2">
                        <div class="col-md-12 text-right">
                            <h4>هل تريد اضافات :</h4>
                            <% for(var i = 0; i < extras.length; i++) { %>
                                <div class="form-check form-check-inline mt-2">
                                    <input class="form-check-input" type="checkbox" name="extras" value="<%= extras[i].extraname %>">
                                    <label class="form-check-label" for="inlineCheckbox1"><%= extras[i].extraname %></label>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
                
                <div class="row mt-5">
                    <div class="col-md-6 text-center">
                        
                            <input type="hidden" name="mealid" value="<%= offer[0].mealid %>">
                            <button type="submit" class="form-control">اضف الى طلباتي</button>
                        
                    </div>
                    <div class="col-md-6 text-center">
                        <a href="/offers" class="form-control">عودة الى العروض</a>
                    </div>
                </div>
                </form>
            </div>
            
        </div>
    </div>

<%- include('include/_footer') %>