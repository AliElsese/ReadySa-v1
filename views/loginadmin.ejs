<%- include('include/_header') %>

    <nav class="navbar navbar-expand-xl navbar-light">
        <div class="container">
            <a class="navbar-brand mb-2" href="/dashboard" ><img src="/img/logo2.png" alt="logo" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarBasic" aria-controls="navbarBasic" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars text-white"></i>
            </button>
            <div class="collapse navbar-collapse show" id="navbarBasic">
                <ul class="navbar-nav me-auto mb-2">
                    <li class="nav-item m-2">
                        <a class="nav-link active" href="/login-admin" >
                                
                            تسجيل دخول
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if(typeof message != 'undefined') { %>
            <div class="col-md-12 text-center">
                <h4 class="alert alert-success mt-4">
                    <%= message %>
                </h4>
            </div>
        <% } %>
    </div>

    <div class="sign-up mt-5 mb-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3 d-none d-md-block"></div>
                <div class="col-md-6">
                    <h3 class="mb-3 text-center">تسجيل الدخول</h3>
                    <form action="/api-loginAdmin" method="post" class="mt-5">
                        <div class="form-group row mb-4">
                            <label for="email" class="col-sm-4 col-form-label">البريد الإلكتروني</label>
                            <div class="col-sm-8">
                                <input type="email" class="form-control p-2" name="email" placeholder="" />
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            <label for="password" class="col-sm-4 col-form-label">كلمة المرور</label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control p-2" name="password" placeholder="" />
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            
                            <div class="col-sm-12">
                                <input type="submit" class="submit form-control p-2" value="تسجيل الدخول" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-3 d-none d-md-block"></div>
            </div>
        </div>
    </div>

<%- include('include/_footer') %>